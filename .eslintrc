{
    "extends": [
        "standard",
        "plugin:vue/base"
    ],
    "plugins": [
        "vue"
    ],
    "parserOptions": {
        "parser": "babel-eslint"
    },
    "rules": {
        "no-new": 0,
        "semi": [2, "always"],
        "indent": [2, 4],
        "vue/html-indent": [2, 4],
        "space-before-function-paren": 0,
        "comma-dangle": [2, "only-multiline"],
        "vue/mustache-interpolation-spacing": 0,
        "vue/component-name-in-template-casing": 0,
        "vue/html-self-closing": 0
    }
}
